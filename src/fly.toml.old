# fly.toml file for Fly.io deployment
app = "summary-bot-opensource"
primary_region = "yyz"

[build]
  image = "Dockerfile"

[env]
  PYTHONUNBUFFERED = "1"
  PYTHONDONTWRITEBYTECODE = "1"
# OPENAI_API_KEY #set by fly secrets 


[[services]]
  internal_port = 8080
  protocol = "tcp"
  auto_start_machines = true
  auto_stop_machines = false  # prevent automatic suspension
  min_machines_running = 1  # keep a machine running at all times
  max_machines_running = 1
